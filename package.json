{
  "name": "trinchera",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:sitemap": "next build && next-sitemap",
    "start": "next start",
    "lint": "next lint",
    "analyze": "set ANALYZE=true && npm run build",
    "analyze:win": "cross-env ANALYZE=true npm run build",
    "lighthouse:prod": "lighthouse https://latrincheramexico.com --view --output html --output-path ./lighthouse-report-prod.html",
    "lighthouse:local": "lighthouse http://localhost:3000 --view --output html --output-path ./lighthouse-report-local.html",
    "lighthouse:mobile": "lighthouse https://latrincheramexico.com --preset=perf --emulated-form-factor=mobile --view --output html --output-path ./lighthouse-mobile.html",
    "lighthouse:desktop": "lighthouse https://latrincheramexico.com --preset=perf --emulated-form-factor=desktop --view --output html --output-path ./lighthouse-desktop.html"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "cloudinary": "^2.7.0",
    "critters": "^0.0.23",
    "next": "15.4.5",
    "next-sitemap": "^4.2.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "swiper": "^11.2.10"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.5.4",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^10.1.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "lighthouse": "^12.8.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
